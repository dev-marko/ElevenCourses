<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ElevenCourses</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ElevenCourses.styles.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Merienda&display=swap" rel="stylesheet">
</head>
<body>
<header class="bg-light">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light mx-5 mb-2 p-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ElevenCourses</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="Courses" asp-action="Create">Create Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="Courses" asp-action="Index">All Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="CourseUsers" asp-action="Index">My Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mx-5 p-1">
    <div class="footer-left text-dark">
        <a> &copy; @DateTime.Now.Year, Eleven Courses Inc. </a>
    </div>
    <div class="footer-center text-dark">
        <p>Eleven Courses</p>
    </div>
    <div class="footer-right">
        <ul class="nav ">
            <li>
                <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li>
                <a class="nav-link text-black" asp-area="" asp-controller="Courses" asp-action="">Courses</a>
            </li>
            <li>
                <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index">About us</a>
            </li>
        </ul>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>