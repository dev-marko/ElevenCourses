@model ElevenCourses.Models.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i>Home
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="" asp-controller="Courses" asp-action="Index">All Courses</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>
</div>

<span>
    <a class="m-3" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</span>
/
<span>
    <a class="m-3" asp-action="ManageWeeks" asp-route-id="@Model?.Id">Manage weeks</a>
</span>

<div class="container pb-3 rounded" style="height: auto; background: #f8f9fb">
    <h3 class="pt-5 m-2">@Html.DisplayFor(model => model.Name)</h3>
    <p class="pb-3 m-3">@Html.DisplayFor(model => model.Description)</p>
</div>

@if (Model.Weeks is {Count: > 0 })
{
    @foreach (var week in Model.Weeks)
    {
        <div class="container pb-3 rounded" style="height: auto; background: #f8f9fb">
            <h3 class="pt-5 m-2">@week.Name</h3>
            <p class="pb-3 m-3">@week.Description</p>
            @if (week.Pdf != null)
            {
                <ul style="list-style-type:none;">
                    @foreach (var doc in week.Pdf)
                    {
                        <li>
                            <i class="bi bi-file-earmark-pdf-fill"></i>
                            <a href="@doc.Path" download>@doc.Name</a>
                        </li>
                    }
                </ul>
            }
        </div>
    }
}